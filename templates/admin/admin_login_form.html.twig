<form role="form" name="adminuser" action="{{path('adminlogin')}}" method="post">
    <fieldset>
        <div class="form-group">
            <input class="form-control" placeholder="Username" required name="_username" type="text" value="{{ last_username is defined?(last_username):("") }}" autofocus>
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Password" name="_password" type="password" required>
        </div>
        <!-- Change this to a button or input when using this as a form -->
        <input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}" />
        <div class="form-group">
            <button type="submit" id="login" name="login" class="btn-secondary btn">Login</button>
        </div>
    </fieldset>
</form>
