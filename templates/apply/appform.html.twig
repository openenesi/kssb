<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Application Form::KSSB </title>
        <!-- Bootstrap CSS -->
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('bootstrap/css/bootstrap.min.css')}}"/>
            <style type='text/css'>
                body {
                    width: 100%;
                    height: 100%;
                    margin: 0;
                    padding: 0;
                    background-color:#ffffff;                
                }

                * {
                    box-sizing: border-box;
                    -moz-box-sizing: border-box;
                }

                #page {
                    width: 210mm;
                    min-height: 297mm;
                    margin: 1mm auto;
                    margin-top:10mm;
                }
                #content {
                    padding: 1cm;
                    height: 257mm;
                    border-width:1px;
                    border-style:solid;
                    border-color:black;
