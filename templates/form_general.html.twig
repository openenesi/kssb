{% extends 'base.html.twig' %}
{% block links %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('bootstrap_datepicker/css/bootstrap-datepicker.min.css')}}"/>
{% endblock links %}
{% block css %}
    <style type="text/css">
        .steps-form-3 {
            width: 2px;
            height: 500px;
            position: relative; 
            margin-top: 20px;}
        .steps-form-3 .steps-row-3 {
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: center;
            -webkit-align-items: center;
            -ms-flex-align: center;
            align-items: center;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -webkit-flex-direction: column;
            -ms-flex-direction: column;
            flex-direction: column; }
        .steps-form-3 .steps-row-3:before {
            top: 14px;
            bottom: 0;
            position: absolute;
            content: "";
            width: 2px;
            height: 100%;
            background-color: #7283a7; }
        .steps-form-3 .steps-row-3 .steps-step-3 {
            height: 100px;
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            text-align: center;
            position: relative; }
        .steps-form-3 .steps-row-3 .steps-step-3.no-height {
            height: 50px; }
        .steps-form-3 .steps-row-3 .steps-step-3 p {
            margin-top: 0.5rem; }
        .steps-form-3 .steps-row-3 .steps-step-3 button[disabled] {
            opacity: 1 !important;
            filter: alpha(opacity=100) !important; }
        .steps-form-3 .steps-row-3 .steps-step-3 .btn-circle-3 {
            width: 60px;
            height: 60px;
            border: 2px solid #ffffff;
            background-color: #59698D !important;
            color: #ffffff !important;
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            padding: 18px 18px 15px 15px; }
        .steps-form-3 .steps-row-3 .steps-step-3 .btn-circle-3:hover {
            border: 2px solid #4285F4;
            color: #4285F4 !important;
            background-color: white !important; }
        /*.steps-form-3 .steps-row-3 .steps-step-3 .btn-circle-3.completed {
            border: 2px solid yellowgreen;
            color: white !important;
            background-color: greenyellow !important; }*/
        .steps-form-3 .steps-row-3 .steps-step-3 .btn-circle-3.activated {
            border: 2px solid #59698D;
            color: #59698D !important;            
            background-color: #ffffff !important; }
        .steps-form-3 .steps-row-3 .steps-step-3 .btn-circle-3 .fa {
            font-size: 1.7rem; }
        .steps-form-3 .steps-row-3 .steps-step-3 a.disabled{
            opacity: 1;
        }

        .righty{
            text-align: right;
        }
        .lefty{
            text-align: left;
            padding-bottom: 10px;
        }

        @media only screen and (max-width: 768px){
            .righty{
                text-align: center;
            }
            .lefty{
                text-align: center;
            }
            #sidenav{
                padding-left:35px;
            }
        }
    </style>
{% endblock css %}
{% block content %}
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-3" id='sidenav'>
            <!-- Stepper -->
            <div class="steps-form-3">
                <div class="steps-row-3 setup-panel-3 d-flex justify-content-between">
                    <div class="steps-step-3">
                        <a href="{{path('form_1')}}" type="button" class="btn btn-info btn-circle-3 waves-effect {{(candidate is defined)?("disabled"):("")}} {{(candidate is defined)?("completed"):("")}} {{(step=='candidate')?('activated'):('')}}" data-toggle="tooltip" data-placement="top" title="Basic Information"><i class="fa fas fa-folder-open" aria-hidden="true"></i></a>
                    </div>
                    <div class="steps-step-3">
                        <a href="{{path('form_2')}}" type="button" class="btn btn-pink btn-circle-3 waves-effect {{(not(candidate is defined) or candidate.appId is not null)?("disabled"):("")}} {{((candidate is defined) and (candidate.getPaid == true))?("completed"):("")}} {{(step=='pay')?('activated'):('')}}" data-toggle="tooltip" data-placement="top" title="Payment"><i class="fa fas fa-money-bill-alt" aria-hidden="true"></i></a>
                    </div>
                    <div class="steps-step-3">
                        <a href="{{path('form_3')}}" type="button" class="btn btn-pink btn-circle-3 waves-effect {{(not(candidate is defined) or (candidate.getPaid == false or candidate.appId is not null))?("disabled"):("")}} {{((candidate is defined) and (candidate.candidatePersonal is not null))?("completed"):("")}} {{(step=='personal')?('activated'):('')}}" data-toggle="tooltip" data-placement="top" title="Personal Data"><i class="fa fas fa-id-card" aria-hidden="true"></i></a>
                    </div>
                    <div class="steps-step-3">
                        <a href="{{path('form_4')}}" type="button" class="btn btn-pink btn-circle-3 waves-effect {{(not(candidate is defined) or (candidate.candidatePersonal is null or candidate.appId is not null))?("disabled"):("")}} {{((candidate is defined) and (candidate.candidateInstitution is not null))?("completed"):("")}} {{(step=='institution')?('activated'):('')}}" data-toggle="tooltip" data-placement="top" title="Academic Details"><i class="fa fas fa-university" aria-hidden="true"></i></a>
                    </div>
                    <div class="steps-step-3">
                        <a href="{{path('form_5')}}" type="button" class="btn btn-pink btn-circle-3 waves-effect {{(not(candidate is defined) or (candidate.candidateInstitution is null or candidate.appId is not null))?("disabled"):("")}} {{((candidate is defined) and (candidate.candidateBank is not null))?("completed"):("")}} {{(step=='bank')?('activated'):('')}}" data-toggle="tooltip" data-placement="top" title="Bank Details"><i class="fa fas fa-credit-card" aria-hidden="true"></i></a>
                    </div>
                    <div class="steps-step-3">
                        <a href="{{path('form_6')}}" type="button" class="btn btn-pink btn-circle-3 waves-effect {{(not(candidate is defined) or candidate.candidateBank is null)?("disabled"):("")}} {{((candidate is defined) and (candidate.appId is not null))?("completed"):("")}} {{(step=='finish')?('activated'):('')}}" data-toggle="tooltip" data-placement="top" title="Finish"><i class="fa fas fa-sign-out-alt" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Grid column -->

        <!-- Grid column -->
        <div class="col-9" style='min-height: 600px;'> 

            {% block formbody %}
            {% endblock formbody %}
        </div>
        <!-- Grid column -->

    </div>
    <!-- Grid row -->
{% endblock content%}
{% block scripts %}
    {{ parent()}}
    <script type="text/javascript" src="{{asset('bootstrap_datepicker/js/bootstrap-datepicker.min.js')}}"></script>
{% endblock scripts %}
{% block js %}
    {{parent()}}
    <script type="text/javascript">
        scrollTo($("#topnavbar"));
        $(".inline-check .form-check").addClass("form-check-inline");
        $(".righty").parent().css("text-align", "right");

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>

{% endblock js %}